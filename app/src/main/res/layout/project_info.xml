<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/projectInfoCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/addProjectField"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="20dp">


        <ImageView
            android:id="@+id/tIcon4"
            android:layout_width="@dimen/iconSize"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:padding="10dp"
            tools:srcCompat="@drawable/icon6" />

        <TextView
            android:id="@+id/projectNameInfo"
            android:layout_width="@dimen/projectNameWidth"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="85dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="@string/dummyProject2"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/totalHours"
            android:layout_width="@dimen/iconSize"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@color/colorWorkedHours"
            android:gravity="center"
            android:text="@string/dummyHours"
            android:textColor="@color/white"
            android:textSize="30sp" />


    </androidx.cardview.widget.CardView>

</LinearLayout>